!cpu 6502
!to "res/DEMO/BUZZARD.BAIT",plain
*=$300

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +ENABLE_ACCEL
         +LOAD_XSINGLE title

         lda   #$60
         sta   $0827
         jsr   $0800      ; decompress

         lda   #$4C
         sta   $1067
         sta   $1B31
         sta   $7A6B
         sta   $80DD
         sta   $81FE
         lda   #0
         sta   $1067+1
         sta   $1B31+1
         sta   $7A6B+1
         sta   $80DD+1
         sta   $81FE+1
         lda   #1
         sta   $1067+2
         sta   $1B31+2
         sta   $7A6B+2
         sta   $80DD+2
         sta   $81FE+2    ; set exits

         +DISABLE_ACCEL

         jmp   $8000

title    !byte x_e-x_b
x_b      !text "BUZZARD.BAIT"
x_e

!if * > $3F0 {
  !error "code is too large, ends at ", *
}
