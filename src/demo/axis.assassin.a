!cpu 6502
!to "build/DEMO/AXIS.ASSASSIN#060300",plain
*=$300

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +GAME_REQUIRES_JOYSTICK

         +ENABLE_ACCEL_LC
         +LOAD_XSINGLE title

         lda   #$81
         sta   $3F11
         lda   #$E3
         sta   $3F15
         lda   #$12
         sta   $3F21

         lda   #$4C
         sta   $3F4B
         jsr   $3EFC      ; decompress

         ldx   #3-1
-        lda   patch,x
         sta   $5B2E,x    ; reset vector patch
         sta   $701C,x
         sta   $5D5B,x
         dex
         bpl   -

         ldx   #2-1
-        lda   patch+1,x
         sta   $5DF4,x
         sta   $5CD8,x
         sta   $5E09,x
         stx   $EF        ; fix uninitialised value
         dex
         bpl   -

         lda   #$24
         sta   $5D24
         lda   #$D0
         sta   $5D14
         lda   #$20
         sta   $5D41
         lda   #<callback
         sta   $5D42
         lda   #>callback
         sta   $5D43
         lsr   $5CBA

         +DISABLE_ACCEL
         jmp   $5c00

counter  !byte 5
callback
         sta   $C010
         dec   counter
         bmi   patch
         rts

patch    !byte $4C,$00,$01

title    +PSTRING "AXIS.ASSASSIN"

!if * > $3F0 {
  !error "code is too large, ends at ", *
}
