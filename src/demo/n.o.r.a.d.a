!cpu 6502
!to "res/DEMO/N.O.R.A.D",plain
*=$330

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +ENABLE_ACCEL
         +LOAD_XSINGLE title

         lda   #$60
         sta   $497E
         jsr   $4900      ; decompress

         lda   #$1D
         sta   $0DB5+4
         lda   #$4C
         sta   $0DD7
         sta   $0E64
         sta   $0E4C      ; instead of $443D, this shows lores 'flash' at demo cycle end
         lda   #0
         sta   $0DD7+1
         sta   $0E64+1
         sta   $0E4C+1
         lda   #1
         sta   $0DD7+2
         sta   $0E64+2
         sta   $0E4C+2    ; set exits

         lda   #$D0
         sta   $0DE7+2
         sta   $1486+2
         sta   $40E7+2    ; disable sound/cassette output

         +DISABLE_ACCEL

         jmp   $0EDD

title    !byte x_e-x_b
x_b      !text "N.O.R.A.D"
x_e

!if * > $3F0 {
  !error "code is too large, ends at ", *
}
