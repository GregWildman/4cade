!cpu 6502
!to "res/DEMO/CHOPLIFTER",plain
*=$300

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +GAME_REQUIRES_JOYSTICK
         +ENABLE_ACCEL
         +LOAD_XSINGLE title
         lda   #$60
         sta   $403F
         jsr   $4000      ; decompress
         lda   #$4C
         sta   $0DAB
         ldx   #0
         stx   $0DAC
         stx   $08F0
         inx
         stx   $0DAD
         stx   $08F1
         lda   #$18
         sta   $0DA9
         +DISABLE_ACCEL
         ldy   #0
         jmp   $400

title    !byte x_e-x_b
x_b      !text "CHOPLIFTER"
x_e

!if * > $3F0 {
  !error "code is too large, ends at ", *
}
