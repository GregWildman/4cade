!cpu 6502
!to "build/PRELAUNCH.INDEXED/GLIDER",plain
*=$106

         !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $818
         jsr   $800       ; decompress
         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   #$AD
         sta   $D2B       ; don't decrease lives
+
         jsr   DisableAccelerator
         +READ_ROM_NO_WRITE
         jmp   $4100

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
