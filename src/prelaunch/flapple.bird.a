!cpu 6502
!to "build/PRELAUNCH.INDEXED/FLAPPLE.BIRD",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $813
         jsr   $800
         +READ_RAM1_NO_WRITE
         lda   WaitForVBL
         eor   #$60
         bne   @good_vbl  ; if VBL disabled in TR
         sta   $2971      ; then disable VBL in game

@good_vbl
         +DISABLE_ACCEL
         lda   $fbb3
         cmp   #$6
         bne   @not_mac
         lda   $fbc0
         cmp   #$e0
         bne   @not_mac
         lda   $fbdd
         cmp   #$02
         bne   @not_mac
         +READ_RAM2_WRITE_RAM2
         +LOAD_FILE_AT flapple_mac, $b000
         jsr   $b000
         +READ_ROM_NO_WRITE

@not_mac
         jmp   $2000

flapple_mac
         +PSTRING "PRELAUNCH/FLAPPLE.MAC"

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
