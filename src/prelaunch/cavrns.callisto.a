!cpu 6502
!to "build/PRELAUNCH.INDEXED/CC",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #>callback
         sta   $8D9
         lda   #<callback
         sta   $8D8
         jmp   $800       ; decompress

callback
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   $BFC
         cmp   #$C6
         bne   +
         lda   #$A5
         sta   $BFC       ; patch - don't decrease lives
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK
         jsr   $BD82
         rts

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
