!cpu 6502
!to "build/PRELAUNCH.INDEXED/MC",plain
*=$106

        !source "src/macros.a"

        +ENABLE_ACCEL
        lda   #$60
        sta   $83C
        jsr   $800       ; decompress

        +GET_MACHINE_STATUS
        and   #CHEATS_ENABLED
        beq   +
        lda   #$2C
        sta   $4C47      ; patch - don't decrease lives
        sta   $562F      ; patch - don't increase lives

+
        +DISABLE_ACCEL_AND_HIDE_ARTWORK
        jmp   $4000

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
