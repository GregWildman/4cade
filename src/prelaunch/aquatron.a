!cpu 6502
!to "build/PRELAUNCH.INDEXED/AQUATRON",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #>(callback - 1)
         sta   $5FC3
         lda   #<(callback - 1)
         sta   $5FC6
         jmp   $59C2      ; decompress

callback
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $7696      ; patch - don't decrease lives
+
         +DISABLE_ACCEL
         jsr   HideLaunchArtwork
         jmp   $400

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
