!cpu 6502
!to "build/PRELAUNCH.INDEXED/KID.NIKI",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $6069

         lda   #1
         sta   $6051      ; reset vector patch

         jsr   $5FF2      ; load assets
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
                          ; lives in $084A
         lda   #$AD
         sta   $BD34      ; patch - don't decrease lives
+
         +DISABLE_ACCEL
         jsr   HideLaunchArtwork
         jmp   $61E3

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
