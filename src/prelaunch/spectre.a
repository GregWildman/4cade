!cpu 6502
!to "build/PRELAUNCH.INDEXED/SPECTRE",plain
*=$106

    !source "src/macros.a"

         jsr   HideLaunchArtwork
         +ENABLE_ACCEL
         lda   #>(callback-1)
         sta   $5F08
         lda   #<(callback-1)
         sta   $5F0B
         jmp   $5E2B      ; decompress

callback
         jsr   $BD78
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $6A6B      ; patch - don't decrease lives
+
         +DISABLE_ACCEL
         jmp   $6000

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
