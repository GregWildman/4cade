!cpu 6502
!to "build/PRELAUNCH.INDEXED/HOPMAN",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$4C
         sta   $98D6
         jsr   $8000      ; decompress
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$AD
         sta   $454B      ; patch - don't decrease time
         sta   $4562      ; patch - don't decrease lives
+
         lda   #$80
         sta   $633b      ; fix joystick down
         +DISABLE_ACCEL
         jmp   $98D9

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
