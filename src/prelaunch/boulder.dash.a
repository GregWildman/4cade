!cpu 6502
!to "build/PRELAUNCH.INDEXED/BOULDER.DASH",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL_AND_HIDE_ARTWORK
         lda   #$60
         sta   $404A
         jsr   $4000      ; decompress & show EA screen

         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$b5
         sta   $181A      ; patch - don't decrease lives
+
         +DISABLE_ACCEL
         jmp   $800

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
