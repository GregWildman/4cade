!cpu 6502
!to "build/PRELAUNCH.INDEXED/RANDAMN",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $4082
         asl
         sta   $40D5
         sta   $40DB
         ldx   #$4e
         txs
         jsr   $4000      ; decompress
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #<callback
         sta   $BFC
         lda   #>callback
         sta   $BFD
+
         +READ_RAM2_NO_WRITE
         jsr   DisableAccelerator
         jmp   cont

*=$17e
callback
         +ENABLE_ACCEL
         lda   #$60
         sta   $834B
         jsr   $8300
         lda   #$A5
         sta   $BE2       ; patch - don't increase lives
         sta   $1271      ; patch - don't decrease lives
         +DISABLE_ACCEL
         jmp   $808
cont
         +READ_ROM_NO_WRITE
         jsr   HideLaunchArtwork
         jmp   $822

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
