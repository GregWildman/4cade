!cpu 6502
!to "build/PRELAUNCH.INDEXED/CRYSTAL.CASTLES",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $4F1D
         jsr   $2000      ; decompress
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$b5
         sta   $1DCF      ; patch - don't decrease lives
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK
         jmp   $93D

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
