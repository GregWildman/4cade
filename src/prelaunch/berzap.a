!cpu 6502
!to "build/PRELAUNCH.INDEXED/BERZAP",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #<callback1
         sta   $879
         lda   #>callback1
         sta   $87a
         jmp   $800       ; decompress

callback1
         lda   #$4c
         sta   $C9        ; fix RNG issue
         sta   $b4d6
         lda   #<callback2
         sta   $b4d7
         lda   #>callback2
         sta   $b4d8
         jmp   $b000

callback2
         lda   #0
         sta   $b4d7
         lda   #2
         sta   $b4d8
         +READ_RAM2_WRITE_RAM2
         +LOAD_FILE_AT berzap_mb, $200
         jsr   DisableAccelerator
         jmp   $200

berzap_mb
         +PSTRING "PRELAUNCH/BERZAP.MB"

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
