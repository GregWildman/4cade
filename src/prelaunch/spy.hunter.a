!cpu 6502
!to "build/PRELAUNCH.INDEXED/SPY.HUNTER",plain
*=$106

         !source "src/macros.a"

         lda   #<callback
         sta   $4013
         lda   #>callback
         sta   $4010
         jmp   $4000
*=$12e                    ; game sets stack pointer to here
callback nop
         +NEW_RESET_VECTOR $300
         +RESET_AND_IRQ_VECTOR $300
         ldy   #0
         sty   $0D8E
         iny
         sty   $0D93
         
         +READ_RAM2_NO_WRITE
         jsr   HideLaunchArtworkLC2
         lda   MachineStatus
         +READ_ROM_NO_WRITE
         and   #CHEATS_ENABLED
         beq   +
         lda   #$AD
         sta   $739D      ; patch - don't decrease timer
+
         jmp   $0451

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
