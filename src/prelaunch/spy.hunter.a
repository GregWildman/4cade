!cpu 6502
!to "build/PRELAUNCH.INDEXED/SPY.HUNTER",plain
*=$106

         !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #<callback
         sta   $4013
         lda   #>callback
         sta   $4010
         jmp   $4000
*=$12e                    ; game sets stack pointer to here
callback nop
         ldy   #1
-        lda   $104, y
         sta   $304, y
         dey
         bpl   -
         +RESET_AND_IRQ_VECTOR $300
         ldy   #0
         sty   $0D8E
         ldy   #3
         sty   $0D93
         
         +READ_RAM2_NO_WRITE
         jsr   HideLaunchArtworkLC2
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   #$AD
         sta   $739D      ; patch - don't decrease timer
+
         jsr   isaveslot
         jsr   DisableAccelerator
         jsr   isaveslot
         +READ_ROM_NO_WRITE
         jmp   $0451

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
