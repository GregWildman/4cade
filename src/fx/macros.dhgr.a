         lda   #.startpage
         sta   $FF
         lda   #$00
         sta   $FE
         tay
         sta   $C005
-        lda   ($FE),y
         sta   ($FE),y
         iny
         bne   -
         inc   $FF
         dex
         bne   -
         sta   $C004
}

_FX_MACROS_DHGR_=*
}
